<div class="container">
  <h1><%= @list.name %></h1>
  <ul>

      <li>
        <%= simple_form_for [@list, @bookmark] do |f| %>
          <%= f.input :comment %>
          <%= f.association :movie,
              collection: Movie.order(:title) %>
          <%= f.button :submit, "Add movie to your list" %>
        <% end %>
      </li>
  </ul>
</div>
